{
    "manifest_version": 3,
    "name": "Hindi-astra - Academic Translation Assistant",
    "version": "1.0.0",
    "description": "Advanced Chrome extension for Hindi-speaking students to translate English academic content including PDFs, Word documents, and scanned materials",
    
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    
    "action": {
        "default_popup": "popup/pdf-popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        },
        "default_title": "Hindi-astra - Academic Translation Assistant"
    },
    
    "background": {
        "service_worker": "background/background.js"
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/global-translator.js"],
            "run_at": "document_end",
            "all_frames": true,
            "match_about_blank": true,
            "match_origin_as_fallback": true
        }
    ],
    
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus",
        "offscreen",
        "tabs"
    ],
    
    "host_permissions": [
        "https://translation.googleapis.com/*",
        "https://translate.googleapis.com/*",
        "<all_urls>",
        "file:///*"
    ],
    
    "options_page": "options/options.html",
    
    "web_accessible_resources": [
        {
            "resources": [
                "content/translation-popup.html",
                "content/dictionary-panel.html",
                "icons/*",
                "assets/*",
                "lib/*"
            ],
            "matches": ["<all_urls>"]
        }
    ],

    "commands": {
        "open-translator": {
            "suggested_key": {
                "default": "Ctrl+Shift+K",
                "mac": "Command+Shift+K"
            },
            "description": "Open Hindi-astra Quick Translator"
        }
    },
    
    "commands": {
        "translate-selection": {
            "suggested_key": {
                "default": "Ctrl+Shift+T",
                "mac": "Command+Shift+T"
            },
            "description": "Translate selected text"
        },
        "toggle-dictionary": {
            "suggested_key": {
                "default": "Ctrl+Shift+D",
                "mac": "Command+Shift+D"
            },
            "description": "Toggle dictionary panel"
        }
    }
}
